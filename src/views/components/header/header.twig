<style>

  .top-heading p{
    color: var(--White, #FFF);
/* font-family: Aeonik; */
font-size: 18px;
font-style: normal;
font-weight: 500;
line-height: normal;
  }
   /* Custom styles for the mobile sidebar */
#mobile-sidebar {
    box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
}

.shop-accordion button svg {
    transition: transform 0.3s ease;
}

.shop-accordion.active button svg {
    transform: rotate(180deg);
}

.shop-submenu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
}

.shop-accordion.active .shop-submenu {
    max-height: 500px;
}

/* Improved Underline Styles */
.nav-link, .mobile-nav-link, .submenu-link {
    position: relative;
    color: rgba(255, 255, 255, 0.8);
    font-weight: 500;
    font-size: 20px;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
    padding-bottom: 6px; /* space for underline */
}

.nav-link:hover, .mobile-nav-link:hover, .submenu-link:hover,
.nav-link.active, .mobile-nav-link.active, .submenu-link.active {
    color: #ffffff;
    font-weight: 600;
}

/* Desktop Navigation Underline */
.nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 30%;
    transform: translateX(-50%) scaleX(0);
    width: 59px;
height: 6px;
    background: url('{{ asset('images/underline.svg') }}') no-repeat center;
    background-size: contain;
    opacity: 0;
    transition: all 0.3s ease;
}

.nav-link:hover::after,
.nav-link.active::after {
    transform: translateX(-50%) scaleX(1);
    opacity: 1;
}

/* Mobile Navigation Underline */
.mobile-nav-link::after {
    content: '';
    position: absolute;
    bottom: -2px; /* underline just below text */
     left: 30%;
    transform: translateX(-50%) scaleX(0);
    width: 59px;
height: 6px;
    background: url('{{ asset('images/underline.svg') }}') no-repeat center;
    background-size: contain;
    opacity: 0;
    transition: all 0.3s ease;
}

.mobile-nav-link:hover::after,
.mobile-nav-link.active::after {
    transform: translateX(-50%) scaleX(1);
    opacity: 1;
}

/* ✅ Submenu (dropdown inside Shop) */
.submenu-link {
    display: inline-block; /* fix underline position */
    padding: 8px 20px;
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.8);
    position: relative; /* anchor underline */
    transition: all 0.3s ease;
}

.submenu-link:hover {
    background: rgba(255, 255, 255, 0.1);
}

/* ✅ Submenu underline fixed */
.submenu-link::after {
    content: '';
    position: absolute;
    bottom: -2px; /* exactly below text */
    left: 30%;
    transform: translateX(-50%) scaleX(0);
    width: 59px;
height: 6px;
    background: url('{{ asset('images/underline.svg') }}') no-repeat center;
    background-size: contain;
    opacity: 0;
    transition: all 0.3s ease;
}

.submenu-link:hover::after,
.submenu-link.active::after {
    transform: translateX(-50%) scaleX(1);
    opacity: 1;
}

/* Improved Dropdown Styles */
nav ul li ul {
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
}

nav ul li:hover ul {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

/* Enhanced Mobile Sidebar Styles */
#mobile-sidebar .bg-gradient-to-b {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.mobile-nav-link {
    border-radius: 8px;
    margin: 2px 0;
    padding: 6px 12px; /* better click area */
    display: inline-block; /* underline center ke liye */
    position: relative; /* underline ke anchor ke liye */
}

.mobile-nav-link:hover {
    background: rgba(255, 255, 255, 0.1);
}

</style>


<script>
    document.addEventListener("DOMContentLoaded", function() {
        // Mobile menu toggle
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenuClose = document.getElementById('mobile-menu-close');
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const sidebarOverlay = document.getElementById('sidebar-overlay');
        
        if (mobileMenuToggle && mobileSidebar) {
            mobileMenuToggle.addEventListener('click', function() {
                mobileSidebar.classList.remove('-translate-x-full');
                document.body.style.overflow = 'hidden';
            });
        }
        
        if (mobileMenuClose && mobileSidebar) {
            mobileMenuClose.addEventListener('click', function() {
                mobileSidebar.classList.add('-translate-x-full');
                document.body.style.overflow = '';
            });
        }
        
        if (sidebarOverlay && mobileSidebar) {
            sidebarOverlay.addEventListener('click', function() {
                mobileSidebar.classList.add('-translate-x-full');
                document.body.style.overflow = '';
            });
        }
        
        // Shop accordion in mobile menu
        const shopAccordions = document.querySelectorAll('.shop-accordion');
shopAccordions.forEach(accordion => {
  const button = accordion.querySelector('button');
  const submenu = accordion.querySelector('.shop-submenu');

  button.addEventListener('click', function() {
    accordion.classList.toggle('active');
  });
});
        
        // Banner text
        const el = document.getElementById("custom-banner-text");
        if (el) {
            el.innerText = "Free Shipping on Order above 300 SAR";
        }
        
        // Currency display update
        if (typeof salla !== 'undefined') {
            salla.event.on('currency::changed', function(currency) {
                const symbolElement = document.getElementById('currency-symbol');
                const nameElement = document.getElementById('currency-name');
                const mobileSymbolElement = document.getElementById('mobile-currency-symbol');
                const mobileNameElement = document.getElementById('mobile-currency-name');
                
                const symbols = {
                    'USD': '$',
                    'SAR': 'ر.س',
                    'EUR': '€',
                    'GBP': '£',
                    'AED': 'د.إ'
                };
                
                const names = {
                    'USD': 'Dollar',
                    'SAR': 'Riyal',
                    'EUR': 'Euro',
                    'GBP': 'Pound',
                    'AED': 'Dirham'
                };
                
                if (symbolElement && nameElement) {
                    symbolElement.textContent = symbols[currency.code] || currency.symbol;
                    nameElement.textContent = names[currency.code] || currency.code;
                }
                
                if (mobileSymbolElement && mobileNameElement) {
                    mobileSymbolElement.textContent = symbols[currency.code] || currency.symbol;
                    mobileNameElement.textContent = names[currency.code] || currency.code;
                }
            });
        }
    });
</script>