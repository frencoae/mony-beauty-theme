  text-align: left;
}

/* Flex direction adjustments for RTL */
.rtl-active .flex-row {
  flex-direction: row-reverse;
}

/* Space adjustments for RTL */
.rtl-active .space-x-2 > :not([hidden]) ~ :not([hidden]) {
  --tw-space-x-reverse: 1;
}

.rtl-active .space-x-6 > :not([hidden]) ~ :not([hidden]) {
  --tw-space-x-reverse: 1;
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function() {
  // Footer i18n
  const footerI18n = {
    en: {
      secure_payment: "Secure Payment",
      fast_delivery: "Fast Delivery!",
      customer_service: "Customer Service",
      quality_assurance: "Quality Assurance",
      brand_name: "MONY BEAUTY",
      brand_description: "Mony Beauty is a makeup brand created with love in South Korea after years of research and development under the supervision of the beauty icon Amani Alhenti",
      shop: "Shop",
      all_products: "All Product",
      best_sellers: "Best Sellers",
      gift_card: "Gift Card",
      information: "Information",
      faqs: "FAQ's",
      affiliate: "Affiliate",
      job_opportunities: "Job opportunities",
      about: "About",
      our_story: "Our Story",
      mb_community: "MB community",
      contact: "Contact",
      privacy_policy: "Privacy Policy",
      terms_conditions: "Terms and Condition",
      copyright: "Copyright | 2025 Mony Beauty"
    },
    ar: {
      secure_payment: "دفع آمن",
      fast_delivery: "توصيل سريع!",
      customer_service: "خدمة العملاء",
      quality_assurance: "ضمان الجودة",
      brand_name: "موني بيوتي",
      brand_description: "موني بيوتي هي علامة تجارية للمكياج تم إنشاؤها بحب في كوريا الجنوبية بعد سنوات من البحث والتطوير تحت إشراف أيقونة الجمال أماني الحنتي",
      shop: "تسوق",
      all_products: "جميع المنتجات",
      best_sellers: "الأكثر مبيعاً",
      gift_card: "بطاقة هدية",
      information: "معلومات",
      faqs: "الأسئلة الشائعة",
      affiliate: "الشركاء",
      job_opportunities: "فرص العمل",
      about: "من نحن",
      our_story: "قصتنا",
      mb_community: "مجتمع MB",
      contact: "اتصل بنا",
      privacy_policy: "سياسة الخصوصية",
      terms_conditions: "الشروط والأحكام",
      copyright: "حقوق الطبع | 2025 موني بيوتي"
    }
  };

  function updateFooterTexts(isRTL) {
    const langData = isRTL ? footerI18n.ar : footerI18n.en;
    const footerTexts = document.querySelectorAll('.footer-text');
    
    footerTexts.forEach(element => {
      const key = element.getAttribute('data-key');
      if (key && langData[key]) {
        element.textContent = langData[key];
      }
    });
  }

  // Check initial language
  const htmlEl = document.documentElement;
  let isRTL = (htmlEl.getAttribute('dir') || '').toLowerCase() === 'rtl' || /ar/i.test(htmlEl.getAttribute('lang') || '');

  // Apply initial footer texts
  updateFooterTexts(isRTL);

  // Listen for language changes (Salla event)
  if (typeof salla !== 'undefined') {
    salla.event.on('localization::changed', function(payload) {
      try {
        const lang = (payload && payload.language && payload.language.code || '').toLowerCase();
        isRTL = lang.startsWith('ar');
        updateFooterTexts(isRTL);
      } catch(e) {
        console.error('Footer language change error:', e);
      }
    });
  }
});
</script>