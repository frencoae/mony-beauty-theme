<script>
    // Best Sellers Slider Functionality
    document.addEventListener('DOMContentLoaded', function() {
        const bsSlider = document.getElementById("bsProductSlider");
        const bsLeftBtn = document.getElementById("bsLeftBtn");
        const bsRightBtn = document.getElementById("bsRightBtn");
        
        if (bsSlider && bsLeftBtn && bsRightBtn) {
            // Calculate scroll amount based on card width and gap
            function bsGetScrollAmount() {
                const card = document.querySelector('.bs-product-card-wrapper');
                const gap = parseInt(getComputedStyle(bsSlider).gap) || 16;
                return card.offsetWidth + gap;
            }
            
            // Scroll left function
            function bsScrollLeft() {
                bsSlider.scrollBy({
                    left: -bsGetScrollAmount(),
                    behavior: 'smooth'
                });
            }
            
            // Scroll right function
            function bsScrollRight() {
                bsSlider.scrollBy({
                    left: bsGetScrollAmount(),
                    behavior: 'smooth'
                });
            }
            
            // Add event listeners to buttons
            bsLeftBtn.addEventListener('click', bsScrollLeft);
            bsRightBtn.addEventListener('click', bsScrollRight);
            
            // Touch swipe functionality for mobile
            let bsStartX;
            let bsScrollLeftPosition;
            
            bsSlider.addEventListener('touchstart', (e) => {
                bsStartX = e.touches[0].pageX;
                bsScrollLeftPosition = bsSlider.scrollLeft;
            });
            
            bsSlider.addEventListener('touchmove', (e) => {
                if (!bsStartX) return;
                const x = e.touches[0].pageX;
                const walk = (x - bsStartX) * 2;
                bsSlider.scrollLeft = bsScrollLeftPosition - walk;
            });
            
            bsSlider.addEventListener('touchend', () => {
                // Snap to nearest card
                const cardWidth = bsGetScrollAmount();
                const scrollPos = bsSlider.scrollLeft;
                const newPosition = Math.round(scrollPos / cardWidth) * cardWidth;
                bsSlider.scrollTo({ left: newPosition, behavior: "smooth" });
                bsStartX = null;
            });
            
            // Hide arrows on mobile
            function bsHandleResize() {
                if (window.innerWidth <= 640) {
                    bsLeftBtn.style.display = 'none';
                    bsRightBtn.style.display = 'none';
                } else {
                    bsLeftBtn.style.display = 'flex';
                    bsRightBtn.style.display = 'flex';
                }
            }
            
            // Initial call and event listener for window resize
            bsHandleResize();
            window.addEventListener('resize', bsHandleResize);
        }
        
        // Countdown Timer
        const countdownDate = new Date().getTime() + 3 * 24 * 60 * 60 * 1000;
        const timer = setInterval(() => {
            const now = new Date().getTime();
            const distance = countdownDate - now;
            if (distance <= 0) {
                clearInterval(timer);
                const countdownEl = document.getElementById("countdown");
                if (countdownEl) {
                    countdownEl.innerHTML = "<p class='text-white text-xl font-semibold'>Offer Ended</p>";
                }
                return;
            }
            const days = Math.floor(distance / (1000 * 60 * 60 * 24));
            const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            
            const daysEl = document.getElementById("days");
            const hoursEl = document.getElementById("hours");
            const minutesEl = document.getElementById("minutes");
            
            if (daysEl) daysEl.textContent = days < 10 ? "0" + days : days;
            if (hoursEl) hoursEl.textContent = hours < 10 ? "0" + hours : hours;
            if (minutesEl) minutesEl.textContent = minutes < 10 ? "0" + minutes : minutes;
        }, 1000);
    });
</script>
